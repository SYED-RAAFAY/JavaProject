<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Todo">

    <Button
        android:id="@+id/back_btn6"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/primary_btn_bg"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="@color/lightGray"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_btn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/primary_btn_bg"
        android:fontFamily="@font/open_sans_semibold"
        android:text="+"
        android:textAllCaps="false"
        android:textColor="@color/lightGray"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_btn2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/primary_btn_bg"
        android:fontFamily="@font/open_sans_semibold"
        android:text="+"
        android:textAllCaps="false"
        android:textColor="@color/lightGray"
        android:textSize="36sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_btn3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/primary_btn_bg"
        android:fontFamily="@font/open_sans_semibold"
        android:text="+"
        android:textAllCaps="false"
        android:textColor="@color/lightGray"
        android:textSize="36sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/edittext1"
        app:layout_constraintEnd_toStartOf="@+id/edittext1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edittext1" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/edittext2"
        app:layout_constraintEnd_toStartOf="@+id/edittext2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edittext2" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/edittext3"
        app:layout_constraintEnd_toStartOf="@+id/edittext3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edittext3" />

    <EditText
        android:id="@+id/edittext1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="130dp"
        android:ems="10"
        android:fontFamily="@font/open_sans_semibold"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_btn6" />

    <EditText
        android:id="@+id/edittext2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="130dp"
        android:ems="10"
        android:fontFamily="@font/open_sans_semibold"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext1" />

    <EditText
        android:id="@+id/edittext3"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="130dp"
        android:ems="10"
        android:fontFamily="@font/open_sans_semibold"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext2" />

    <Button
        android:id="@+id/time1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/time"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/edittext1"
        app:layout_constraintStart_toEndOf="@+id/edittext1"
        app:layout_constraintTop_toTopOf="@+id/edittext1" />

    <Button
        android:id="@+id/time2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/time"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/edittext2"
        app:layout_constraintStart_toEndOf="@+id/edittext2"
        app:layout_constraintTop_toTopOf="@+id/edittext2" />

    <Button
        android:id="@+id/time3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/time"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/edittext3"
        app:layout_constraintStart_toEndOf="@+id/edittext3"
        app:layout_constraintTop_toTopOf="@+id/edittext3" />

    <Button
        android:id="@+id/date1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/date"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/time1"
        app:layout_constraintStart_toEndOf="@+id/time1"
        app:layout_constraintTop_toTopOf="@+id/time1" />

    <Button
        android:id="@+id/date2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/date"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/time2"
        app:layout_constraintStart_toEndOf="@+id/time2"
        app:layout_constraintTop_toTopOf="@+id/time2" />

    <Button
        android:id="@+id/date3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/date"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/time3"
        app:layout_constraintStart_toEndOf="@+id/time3"
        app:layout_constraintTop_toTopOf="@+id/time3" />

    <TextView
        android:id="@+id/showtime1"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext1" />

    <TextView
        android:id="@+id/showtime2"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext2" />

    <TextView
        android:id="@+id/showtime3"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext3" />

    <TextView
        android:id="@+id/showdate1"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans_semibold"
        app:layout_constraintStart_toEndOf="@+id/showtime1"
        app:layout_constraintTop_toBottomOf="@+id/edittext1" />

    <TextView
        android:id="@+id/showdate2"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans_semibold"
        app:layout_constraintStart_toEndOf="@+id/showtime2"
        app:layout_constraintTop_toBottomOf="@+id/edittext2" />

    <TextView
        android:id="@+id/showdate3"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans_semibold"
        app:layout_constraintStart_toEndOf="@+id/showtime3"
        app:layout_constraintTop_toBottomOf="@+id/edittext3" />

    <Button
        android:id="@+id/notify1"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/primary_btn_grey"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Notify Me"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/showdate1"
        app:layout_constraintTop_toBottomOf="@+id/edittext1" />

    <Button
        android:id="@+id/notify2"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/primary_btn_grey"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Notify Me"
